@model IEnumerable<VHStore.Models.Movie>

@{
    ViewBag.Title = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>


@if (!Model.Any())
{
    <text>We don't have any movie yet.</text>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Movie</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(movies => movie.Name)
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
